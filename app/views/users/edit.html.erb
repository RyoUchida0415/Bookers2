<h1>User info</h1>

<%= form_for(@user) do |f|%>
<% if @user.errors.any? %>
   <div id=error_explanation>
   	<h2><%= @user.errors.count %> error prihibited this book from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Name</h2>
<%= f.text_field :name %>
<h2>Image</h2>
<%= f.attachment_field :profile_image %>
<h2>Introduction</h2>
<%= f.text_area :introduction %>

<%= f.submit 'Update User' %>

<% end %>