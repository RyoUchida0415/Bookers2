<div class="container"> <!-- ここを追加 -->
    <div class="row">

 <div class="col-xs-3">
 <h1>User info</h1>

   <%= attachment_image_tag @user,:profile_image, format:'jpg', fallback: "no_image.jpg" ,size:"60x60" %>
   <h3>name</h3>
   <%= @user.name %>
   <br>
   <h3>introduction</h3>
    <%= @user.introduction %>

   <% if @user.id == current_user.id %>
    <%= link_to "", edit_user_path(@user) ,class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_21182"%>
  <% end %>



<h1>New book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
   <div id="error_explanation" style="color: red;">
   	<h2><%= @book.errors.count %> error prihibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
   <h3>Title</h3>
   <%=f.text_field :title %>

   <h3>Opinion</h3>
   <%=f.text_area :body %>

   <%= f.submit 'Create Book' %>
<%end%>
</div>

<div class="col-xs-9">
<h2>Users</h2>
    <table class="table table-striped">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%=attachment_image_tag user,:profile_image, format:'jpg', fallback: "no_image.jpg" ,size:"60x60" %></td>
        <td><%= user.name %></td>
        <td><%=link_to"Show",user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>
</div>