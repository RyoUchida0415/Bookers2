<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/b67fd9c592.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <h4>Bookers
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li class="glyphicon glyphicon-home"aria-hidden="true">
      <%= link_to 'Home' ,user_path(@user.id) %>
      </li>
      <li class="glyphicon glyphicon-user" aria-hidden="true">
        <%= link_to 'Users' ,users_path %>
      </li>
      <li class="glyphicon glyphicon-book">
        <%= link_to 'Books' ,books_path %>
      </li>
      <li class="glyphicon glyphicon-log-out">
        <%= link_to 'logout', destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li class="glyphicon glyphicon-home">
        <%= link_to "Home" ,root_path %>
      </li>
      <li class="glyphicon glyphicon-link">
        <%= link_to "About" ,about_path %>
      </li>
      <li class="glyphicon glyphicon-edit">
        <%=link_to "sign up",new_user_registration_path %>
      </li>
      <li class="glyphicon glyphicon-log-in">
        <%=link_to "login", new_user_session_path %>
      </li>
    <% end %>
  </ul>
</h4>
</header>
    <%= yield %>
<p>CopyRight Infratop.inc</p>
  </body>
</html>
