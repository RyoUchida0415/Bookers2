<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/b67fd9c592.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <h4>Bookers</h4>
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li class="aikonn">
      <%= link_to 'Home' ,user_path(@user.id), class:"glyphicon glyphicon-home" %>
     </li>
      <li class="aikonn">
        <%= link_to 'Users' ,users_path, class:"glyphicon glyphicon-user" %>
      </li>
      <li class="aikonn">
        <%= link_to 'Books' ,books_path ,class:"glyphicon glyphicon-book" %>
      </li>
      <li class="aikonn">
        <%= link_to 'logout', destroy_user_session_path, class:"glyphicon glyphicon-log-out" , method: :delete %>
      </li>
    <% else %>
      <li class="aikonn">
        <%= link_to "Home" ,root_path ,class:"glyphicon glyphicon-home" %>
      </li>
      <li class="aikonn">
        <%= link_to "About" ,homes_about_path ,class:"glyphicon glyphicon-link"%>
      </li>
      <li class="aikonn">
        <%=link_to "sign up",new_user_registration_path ,class:"glyphicon glyphicon-edit"%>
      </li>
      <li class="aikonn">
        <%=link_to "login", new_user_session_path ,class:"glyphicon glyphicon-log-in"%>
      </li>
    <% end %>
  </ul>
</h4>
</header>
    <%= yield %>
<p>CopyRight Infratop.inc</p>
  </body>
</html>
